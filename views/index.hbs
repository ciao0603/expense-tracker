{{!-- dropdown --}}
<div class="select-list">
  <form action="/search"
    method="GET">
    <select class="form-select"
      aria-label="Default select example"
      name="sort"
      onchange="this.form.submit()">
      <option selected>類別</option>
      {{#each categories}}
      <option type="submit" value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </form>
</div>
{{!-- total amount --}}
<div class="d-flex justify-content-between mt-3">
  <p class="mb-0">總金額:</p>
  <p class="fs-1 mt-1 fw-bold"
    style="color:#fd7e14">{{totalAmount}}</p>
</div>
{{!-- records --}}
<div class="data-penal">
  <ul class="list-group">
    {{#each records}}
    <div class="d-flex">
      <li class="list-group-item "
        style="width:100%">
        <div class="row align-items-center">
          <div class="col-auto">
            <i class="fa-solid fa-house"></i>
          </div>
          <div class="col-auto me-auto">
            <h4 class="mb-0">
              {{this.name}}
            </h4>
            <p class="mb-0">{{this.date}}</p>
          </div>
          <div class="col-auto ">
            <h5>{{this.amount}}</h5>
          </div>
        </div>
      </li>
      <div class="btn-group d-flex"
        style="height: 40px; width: 0; margin-top: 15px;">
        <a href="./records/{{this._id}}/edit"
          style="margin-left: 20px; white-space: nowrap;">
          <button class="btn btn-outline-dark me-3">
            修改
          </button></a>
        <form action="./records/{{this._id}}?_method=DELETE"
          method="POST"
          style=" white-space: nowrap;">
          <button class="btn btn-outline-dark"
            type="submit">刪除</button>
        </form>
      </div>
    </div>
    {{/each}}
  </ul>
</div>
<div class="d-flex justify-content-center">
  <a class="btn btn-warning mt-3 "
    href="./records/new">新增支出</a>
</div>